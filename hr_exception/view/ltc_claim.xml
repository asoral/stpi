<?xml version="1.0" ?>
<odoo>
     <record id="action_employee_ltc_claim_tree" model="ir.actions.act_window">
              <field name="name">Ltc Claim Exception</field>
              <field name="res_model">exception.rule</field>
              <field name="view_type">form</field>
              <field name="view_mode">tree,form</field>
              <field name="view_id" ref="base_exception_and_approval.view_exception_rule_tree"/>
              <field name="domain">[('rule_group', '=', 'employee_ltc_claim')]</field>
              <field name="context">{'active_test': False, 'default_rule_group' : 'employee_ltc_claim'}</field>
          </record>

        <menuitem
            id="menu_employee_ltc_claim_exception_parent"
            parent="hr.menu_human_resources_configuration"
            sequence="6"
            name="Exceptions"
    />

    <menuitem
            action="action_employee_ltc_claim_tree"
            id="menu_employee_ltc_claim_test"
            parent="hr_exception.menu_employee_ltc_claim_exception_parent"
    />

    <record id="view_employee_ltc_claim_exp_form" model="ir.ui.view">
        <field name="name">employee_ltc_claim_view__form</field>
        <field name="model">employee.ltc.claim</field>
        <field name="inherit_id" ref="employee_ltc.employeeltc_claim_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='employee_id']" position="after">
                <field name="main_exception_id" options='{"no_open": True}' string="Error:" attrs="{'invisible':[('main_exception_id','=', False)]}"/>
                <field name="ignore_exception" invisible="1"/>
            </xpath>
            
             <xpath expr="//notebook" position="inside">
                <page string="Other Info" groups="base.group_no_one">
                     <field name="exception_ids" colspan="2" nolabel="1" readonly="1"/>
                </page>
            </xpath>
        </field>
    </record>



    <record id="view_employee_ltc_claim_exp_tree" model="ir.ui.view">
        <field name="name">employee_ltc_claim_view_tree</field>
        <field name="model">employee.ltc.claim</field>
        <field name="inherit_id" ref="employee_ltc.employeeltc_claim_tree_view"/>
        <field name="arch" type="xml">
             <field name="state" position="after">
                   <field name="main_exception_id"/>
             </field>
        </field>
    </record>
</odoo>
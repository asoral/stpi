<odoo>
    <data>
        <record model="ir.ui.view" id="hr_employee_contracts_form_inherited">
            <field name="name">hr.contract.form</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='resource_calendar_id']" position="after">
                    <field name = 'employee_type' invisible = 'True'/>
                    <field name = 'mode_of_promotion' attrs="{'invisible': [('employee_type', '!=', 'regular')], 'required': [('employee_type', '=', 'regular')]}"/>
                </xpath>

                <xpath expr="//field[@name='struct_id']" position="after">
                    <field name = 'pay_level_id' required = 'True'/>
                    <field name = 'pay_level' domain="[('entry_pay_id', '=', pay_level_id)]"/>
                    <field name = 'city_id' readonly="1"/>
                    <field name = 'employee_hra_cat' readonly="1"/>
                    <field name = 'city_tier' readonly="1"/>

                </xpath>
                
                <!--#Added by Sangita -->
                <field name="type_id" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                
                <field name="schedule_pay" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>

                <!-- <xpath expr="//group[@name='duration_group']" position="replace"> 
                    <group name="duration_group" string="Service History"/> 
                </xpath> -->

                <!-- <xpath expr="//form/sheet/notebook/page/group/group[@name='duration_group']" position = "attributes">
                    <attriute name = "name">Service History</attriute>
                </xpath> -->

            </field>
        </record>
    </data>
</odoo>
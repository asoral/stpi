<odoo>
    <record model="ir.module.category" id="module_tour_request_employee">
        <field name="name">Tour Request</field>
        <field name="description">Help You For Tour Request</field>
        <field name="sequence">21</field>
    </record>


    <record id="group_employee_manager" model="res.groups">
        <field name="name">Employee Travel Manager</field>
        <field name="category_id" ref="module_tour_request_employee"/>
    </record>

    <record id="group_senior_director" model="res.groups">
        <field name="name">Senior Director Group</field>
        <field name="category_id" ref="module_tour_request_employee"/>
    </record>
    
    <record id="group_travel_processor" model="res.groups">
        <field name="name">Employee Travel Processer</field>
        <field name="category_id" ref="module_tour_request_employee"/>
    </record>

        <record id="requisition_record_rule" model="ir.rule">
        <field name="name">Tour Request</field>
        <field name="model_id" ref="tour_request.model_tour_request"/>
        <field name="domain_force">['|',  ('branch_id','=',user.default_branch_id.id), ('branch_id','in',[g.id for g in user.branch_ids])]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

</odoo>
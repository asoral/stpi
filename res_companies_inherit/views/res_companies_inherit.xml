<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="res_companies_inherit_stpi">
        <field name="name">res.company.form.view</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Indian Payroll" name="indian_payroll">
                    <group>
                        <field name="jp"/>
                        <field name="scpercent"/>
                        <field name="stpercent"/>
                        <field name="obcercent"/>
                        <field name="ebcpercent"/>
                        <field name="vhpercent"/>
                        <field name="hhpercent"/>
                        <field name="phpercent"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
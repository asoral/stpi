<odoo>


    <record id="view_recruitment_report_tree" model="ir.ui.view">
        <field name="name">recruitment.tree.view</field>
        <field name="model">recruitment.report</field>
        <field name="arch" type="xml">
            <tree create="0" delete="0">
                <field name="jobposition"/>
                <field name="department"/>
                <field name="branch"/>
                <field name="sanctionedpositions"/>
                <field name="currentempcount"/>
                <field name="scpercet"/>
                <field name="stpercet"/>
                <field name="obcpercet"/>
                <field name="ebcpercet"/>
                <field name="vhpercent"/>
                <field name="phpercent"/>
                <field name="hhpercent"/>
                <field name="ruleclass"/>
                <field name="nosc"/>
                <field name="nost"/>
                <field name="noobc"/>
                <field name="noebc"/>
                <field name="currobc"/>
                <field name="currgen"/>
                <field name="currsc"/>
                <field name="currst"/>
                <field name="currewc"/>
            </tree>
        </field>
    </record>

    <record id="view_recruitment_search" model="ir.ui.view">
        <field name="name">recruitment.search.view</field>
        <field name="model">recruitment.report</field>
        <field name="arch" type="xml">
            <search>
                <field name="jobposition"/>
                <field name="department"/>
                <field name="branch"/>
            </search>
        </field>
    </record>
    
    <record id="view_recruitment_pivot" model="ir.ui.view">
         <field name="name">recruitment.pivot.view</field>
         <field name="model">recruitment.report</field>
         <field name="arch" type="xml">
            <pivot>
                <field name="jobposition" type="row"/>
                <field name="department" type="row" />
            </pivot>
         </field>
    </record>


</odoo>
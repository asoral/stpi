<odoo>
    
      <record id="hr_employee_profile_form_internal" model="ir.ui.view">
        <field name="name">hr.employee.form.view</field>
        <field name="model">hr.employee</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Employee">
                <sheet>
                    <group>
                        <group>
                            <field name="salutation"/>
                            <field name="name"/>
                            <field name="employee_type"/>
                            <field name="identify_id"/>
                            <field name="work_location"/>
                            <field name="work_email"/>
                             <field name="mobile_phone"/>
                             <field name="work_phone"/>
                             <field name="fax_number"/>
                        </group>
                        <group>
                             <field name="date_of_join"/>
                             <field name="department_id"/>
                             <field name="job_id" string="Functional Designation"/>
                             <field name="job_title" string="Post"/>
                             <field name="branch_id"/>
                             <field name="parent_id"/>
                             <field name="gender"/>
                             <field name="state"/>
                        </group>
                    </group>
                </sheet>

            </form>
        </field>
    </record>


      <record id="hr_employee_profile_tree_internal" model="ir.ui.view">
        <field name="name">hr.employee.tree.view</field>
        <field name="model">hr.employee</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Employee" create="0" delete="0">
                <field name="salutation"/>
                <field name="name"/>
                <field name="employee_type"/>
                <field name="identify_id"/>
            </tree>
        </field>
    </record>


        <record model="ir.actions.act_window" id="action_employee_profile">
           <field name="name">Employee Profile</field>
           <field name="res_model">hr.employee</field>
           <field name="view_type">form</field>
           <field name="view_mode">tree,form,search</field>
           <field name="view_id" ref="hr_employee_profile_form_internal"/>
       </record>


</odoo>


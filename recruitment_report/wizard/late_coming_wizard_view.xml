<odoo>

    <record id="form_view_recruitment_wizard" model="ir.ui.view">
        <field name="name">view.form.recruitment.wizard</field>
        <field name="model">wizard.recruitment</field>
        <field name="arch" type="xml">
            <form string="Late Coming Report">
                <group>
                    <group>
                        <field name="date_range"/>
                        <field name="date_from" /> 
                        <field name="date_to"/>
                    </group>
                    <group>
                        <field name="type" widget="radio"/>
                        <field name="emp_ids"  widget="many2many_tags" attrs="{'invisible':[('type','=','by_dept')]}" options="{'no_create_edit':True}"/>
                        <field name="dept_ids" widget="many2many_tags" attrs="{'invisible':[('type','=','by_emp')]}" options="{'no_create_edit':True}"/>
                        <field name="report_of" readonly="1"/>
                    </group>
                </group>
                <footer>
                    <button name="confirm_report" string="Confirm" type="object" class="btn-primary"/>
                    <button name="report_pdf" string="Print" type="object" class="oe_highlight" attrs="{'invisible':[('report_of','=','lwp_exception')]}"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="recruitment_action_wizard" model="ir.actions.act_window">
        <field name="name">Late Coming Report</field>
        <field name="res_model">wizard.recruitment</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_report_of':'recruitment'}</field>
    </record>
    
    
    <menuitem id="hr_attendance.menu_hr_attendance_report" name="Reporting" parent="hr_attendance.menu_hr_attendance_root" sequence="30" groups="hr_attendance.group_hr_attendance_user" />
    <menuitem id="menu_hr_attendance" name="Attendance" parent="hr_attendance.menu_hr_attendance_report" sequence="1" groups="hr_attendance.group_hr_attendance_user" action="hr_attendance.hr_attendance_action_graph"/>
    <menuitem id="menu_recruitment_report" name="Late Coming Report" parent="hr_attendance.menu_hr_attendance_report" sequence="1" action="recruitment_action_wizard"/>
    
